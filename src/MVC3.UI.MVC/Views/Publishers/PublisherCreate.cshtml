@model MVC3.DATA.EF.Publisher
<!--This partial view will have it visibility toggled, but will sit above the table when displayed du to
    a button click, allow for adding new records-->

@using (Html.BeginForm("", "", FormMethod.Post, new { id = "PublisherCreateForm" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
